<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="70dp">


    <ImageView
        android:id="@+id/iv_cartoonList_albumpic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        android:src="@mipmap/ic_launcher"
         />

    <TextView
        android:id="@+id/tv_cartoonList_name"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/iv_cartoonList_albumpic"
        android:text="名字"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_cartoonList_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_cartoonList_name"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tv_cartoonList_name"
        android:text="类型" />

    <TextView
        android:id="@+id/tv_cartoonList_finish"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_cartoonList_name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/iv_cartoonList_albumpic"
        android:text="是否完成:" />

    <TextView
        android:id="@+id/tv_cartoonList_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_alignBaseline="@+id/tv_cartoonList_finish"
        android:layout_below="@+id/tv_cartoonList_type"
        android:layout_toRightOf="@+id/tv_cartoonList_finish"
        android:text="地区" />

    <TextView
        android:id="@+id/tv_cartoonList_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_cartoonList_area"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:text="150302" />
</RelativeLayout>